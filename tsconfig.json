{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
	  "@components/*":["./src/app/components/*"],
	  "@styles/*":["./src/styles/*"],
	  "@redux/*":["./src/redux/*"],
	  "@public/*":["./public/*"],
	  "@server/*":["./server/*"],
	  "@images/*": ["/public/static/images/*"],
	  "@lib/*": ["./src/lib/*"],
	  "@utils/*": ["./src/utils/*"],
	  "@graphql/*": ["./graphql/*"]

    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/_document.js"],
  "exclude": ["node_modules"]
}
