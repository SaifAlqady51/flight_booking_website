model SearchResult {
  id             String      @id @default(cuid())
  from           String
  to             String
  flightDate     String
  numberOfAdults String 
  travelClass    String 
  user           User?       @relation(fields: [userId], references: [id])
  userId         String?

  @@map("searchResults")
}

